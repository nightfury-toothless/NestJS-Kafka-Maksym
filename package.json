{
  "name": "@rob3000/nestjs-kafka",
  "version": "0.1.0",
  "description": "KafkaJS integration with NestJS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "tsc",
    "test": "jest",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "kafka:start": "docker-compose up -d -f ./kafka/docker-compose.yml",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest-e2e.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rob3000/nestjs-kafka.git"
  },
  "keywords": [
    "nestjs",
    "kafkajs"
  ],
  "author": "Rob Shepherd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rob3000/nestjs-kafka/issues"
  },
  "homepage": "https://github.com/rob3000/nestjs-kafka#readme",
  "dependencies": {
    "@kafkajs/confluent-schema-registry": "^1.0.6",
    "@nestjs/common": "^7.4.4",
    "@nestjs/core": "^7.4.4",
    "@nestjs/microservices": "^7.4.4",
    "kafkajs": "^1.13.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@nestjs/testing": "^7.4.4",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.10.1",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "babel-jest": "^26.3.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.4.2",
    "prettier": "^2.1.2",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  }
}
